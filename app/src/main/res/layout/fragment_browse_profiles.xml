<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Tab Bar -->
    <LinearLayout
        android:id="@+id/profile_tab_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Tabs -->
        <TextView
            android:id="@+id/tab_facilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Facilities" />

        <TextView
            android:id="@+id/tab_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Users" />

        <TextView
            android:id="@+id/tab_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Images" />

        <TextView
            android:id="@+id/tab_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Events" />
    </LinearLayout>

    <!-- ViewPager for Tabs -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/browse_profiles_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profile_tab_container" />

    <!-- Floating Action Button -->
    <ImageView
        android:id="@+id/fab_delete"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:contentDescription="Delete"
        android:src="@drawable/ic_trash"
        app:tint="#FFFFFF"
        android:background="@drawable/delete_button_background"
        android:scaleType="center" />
</RelativeLayout>
