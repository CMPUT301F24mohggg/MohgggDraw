<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Back Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/profile_back_botton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:tint="#7A4EFF" />

    </LinearLayout>

    <!-- Tab Bar -->
    <LinearLayout
        android:id="@+id/profile_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_back_botton"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="10dp">

        <Button
            android:id="@+id/tab_facilities"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Facilities"
            android:textColor="#7A4EFF"
            android:textStyle="bold" />
<!--drwawnables-->
<!--        android:background="@drawable/tab_selected_background"-->

        <Button
            android:id="@+id/tab_users"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Users"
            android:textColor="#A8A8A8"
            android:textStyle="normal" />
<!--draweabels-->
<!--        android:background="@drawable/tab_unselected_background"-->

    </LinearLayout>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_tab_bar"
        android:layout_margin="10dp"
        android:hint="Search"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:inputType="text" />
<!--    drawables-->
<!--    android:background="@drawable/search_bar_background"-->
<!--    android:drawableStart="@drawable/ic_search"-->


    <!-- ListView for Profiles -->
    <ListView
        android:id="@+id/profile_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_bar"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:padding="10dp" />

    <!-- Floating Action Button -->
    <ImageView
        android:id="@+id/fab_delete"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:contentDescription="Delete"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp" />

<!--    For the drawables-->
<!--    android:src="@drawable/ic_delete"-->


</RelativeLayout>